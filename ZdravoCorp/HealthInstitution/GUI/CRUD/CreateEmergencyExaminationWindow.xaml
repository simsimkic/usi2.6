<Window x:Class="ZdravoCorp.HealthInstitution.GUI.CRUD.CreateEmergencyExaminationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.HealthInstitution.GUI.CRUD"
        mc:Ignorable="d"
        Title="CreateEmergencyExaminationWindow" Height="300" Width="800">
    <StackPanel Background="#96897f">
        <StackPanel Background="#625750" Margin="0, 35, 0, 35" Height="220" Width="720">
            <ScrollViewer VerticalScrollBarVisibility="Visible" MaxHeight="18000" Height="474" Margin="18,0,1,0">
                <StackPanel  Height="Auto" Width="720">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Top">
                            <Button FontSize="15" Height="30" Width="140" Margin ="5" Background="#e0e2e4" Click="PickExamination">Pick an examinaiton</Button>
                        </DockPanel>
                        <ListView Name="listExaminations" Height="Auto"  Background="#f4e1d2"/>
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</Window>
