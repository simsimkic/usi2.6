<Window x:Class="ZdravoCorp.HealthInstitution.GUI.CRUD.CreateAnamnesisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.HealthInstitution.GUI.CRUD"
        mc:Ignorable="d"
        Title="CreateAnamnesis" Height="443" Width="500">
    <StackPanel Background="#625750">
        <Label FontSize="22" HorizontalAlignment="Center" Margin="0, 30, 0 ,0">Anamnesis</Label>
        <StackPanel Width="450" Height="auto" Background="#c6bcb6" Margin="0, 30, 0, 0">
            <Label FontSize="15" Margin="20, 10, 0, 0">Symptoms:</Label>
            <TextBox Name ="symptomsBox" FontSize="15" Height="30" Width="400"></TextBox>
            <Label FontSize="15" Margin="20, 10, 0, 0">Alergies:</Label>
            <TextBox Name ="alergiesBox" FontSize="15" Height="30" Width="400"></TextBox>
            <Label FontSize="15" Margin="20, 10, 0, 0">Earlier illnesses:</Label>
            <TextBox Name ="earlierIllnessesBox" FontSize="15" Height="30" Width="400"></TextBox>

            <Button FontSize="15" Height="30" Width="130" Margin ="30" Background="#96897f" Click="TryToCreateAnamnesis">Create Anamnesis</Button>
        </StackPanel>
    </StackPanel>
</Window>
